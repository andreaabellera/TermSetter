<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Custom parent theme presets from which all themes will inherit-->
    <style name="TermsetterBase" parent="Theme.AppCompat.Light.NoActionBar">


        <!-- Original AppCompat attributes. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/tsSecondary</item>
        <item name="colorOnSurface">@color/colorOnSurface</item> <!-- outline of text fields/buttons -->
        <item name="android:colorBackground">@color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>

        <!-- New MaterialComponents attributes. -->
        <item name="colorPrimaryVariant">@color/tsPrimaryVariant</item>
        <item name="colorSecondaryVariant">@color/tsSecondaryVariant</item>
        <item name="colorOnPrimary">@color/tsColorOnPrimary</item>
        <item name="scrimBackground">@color/mtrl_scrim_color</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MaterialComponents.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MaterialComponents.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Button</item>
    </style>

    <!-- parent components -->
    <style name="Widget.Termsetter.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">3dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Termsetter.SmallComponent</item>
    </style>

    <style name="Widget.Termsetter.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.Termsetter.SmallComponent</item>
    </style>

    <!-- Menu buttons -->
    <style name="Widget.Termsetter.MenuButton" parent="Widget.Termsetter.Button">
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">.15</item>

    </style>

    <!-- Confirmation buttons -->
    <style name="Widget.Termsetter.ConfirmButton" parent="Widget.Termsetter.Button">
        <item name="android:padding">12dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Text buttons -->
    <style name="Widget.Termsetter.TextButton.Large" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/tsBlue200</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">.15</item>
    </style>

    <style name="Widget.Termsetter.TextButton.Small" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/tsBlue200</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Text appearances -->

    <style name="TextAppearance.Termsetter.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">.1</item>
    </style>

    <style name="TextAppearance.Termsetter.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Component shapes -->

    <style name="ShapeAppearance.Termsetter.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>