<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".OfferedClassesDetail">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <TextView
            android:id="@+id/s1Time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="48dp"
            android:text="8:30am - 9:20am"
            android:textColor="@color/foreground"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/sections_rgrp"
            app:layout_constraintTop_toBottomOf="@+id/selectedClassName_txt" />

        <TextView
            android:id="@+id/s1Prof_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"
            android:text="Dr. Json Nutella"
            android:textColor="@color/foreground"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/sections_rgrp"
            app:layout_constraintTop_toBottomOf="@+id/s1Time_txt" />

        <TextView
            android:id="@+id/s2Prof_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"
            android:text="Prof. Sushi Android"
            android:textColor="@color/foreground"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/sections_rgrp"
            app:layout_constraintTop_toBottomOf="@+id/s2Time_txt" />

        <TextView
            android:id="@+id/selectedClass_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text="COMP1010"
            android:textColor="@color/foreground"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/selectedClassName_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text="Introductory Computer Science 1"
            android:textColor="@color/foreground"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectedClass_txt" />

        <TextView
            android:id="@+id/selectedClassCred_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:text="3.00CR"
            android:textColor="@color/accent_1"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/selectedClass_txt"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/s1Day_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:text="MWF"
            android:textColor="@color/foreground"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/sections_rgrp"
            app:layout_constraintTop_toBottomOf="@+id/selectedClassName_txt" />

        <TextView
            android:id="@+id/s2Day_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="TR"
            android:textColor="@color/foreground"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/sections_rgrp"
            app:layout_constraintTop_toBottomOf="@+id/s1Prof_txt" />

        <RadioGroup
            android:id="@+id/sections_rgrp"
            android:layout_width="96dp"
            android:layout_height="189dp"
            android:checkedButton="@id/s1_rbtn"
            app:layout_constraintEnd_toStartOf="@+id/s1Day_txt"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectedClassName_txt">

            <RadioButton
                android:id="@+id/s1_rbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:text="A01"
                android:textColor="@color/foreground"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selectedClassName_txt" />

            <RadioButton
                android:id="@+id/s2_rbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:text="A02"
                android:textColor="@color/foreground"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/s1Prof_txt" />

        </RadioGroup>

        <Button
            android:id="@+id/enroll_btn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/foreground"
            android:text="ENROLL"
            android:textColor="@color/background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/s2Time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="32dp"
            android:text="10:30am - 11:45am"
            android:textColor="@color/foreground"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/sections_rgrp"
            app:layout_constraintTop_toBottomOf="@+id/s1Prof_txt" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>