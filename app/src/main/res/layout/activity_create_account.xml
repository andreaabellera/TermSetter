<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Presentation.CreateAccount">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            android:text="Registration"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextSetName"
            android:layout_width="@dimen/Termsetter.EditText.Width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="64dp"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:hint="Your name"
            android:inputType="text"
            android:maxLength="30"/>

        <EditText
            android:id="@+id/editTextSetID"
            android:layout_width="@dimen/Termsetter.EditText.Width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:hint="ID"
            android:inputType="text"
            android:maxLength="20"/>

        <EditText
            android:id="@+id/editTextSetPassword"
            android:layout_width="@dimen/Termsetter.EditText.Width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_baseline_https_24"
            android:drawableLeft="@drawable/ic_baseline_https_24"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLength="20"/>

        <EditText
            android:id="@+id/editTextConfirmAPassword"
            android:layout_width="@dimen/Termsetter.EditText.Width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_baseline_https_24"
            android:drawableLeft="@drawable/ic_baseline_https_24"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:maxLength="20"/>

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="@dimen/Termsetter.EditText.Width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_baseline_mail_outline_24"
            android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
            android:hint="Email"
            android:maxLength="40"/>

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="@dimen/Termsetter.EditText.Width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_baseline_phone_24"
            android:drawableLeft="@drawable/ic_baseline_phone_24"
            android:hint="Phone"
            android:inputType="number|phone"
            android:maxLength="10"/>

        <Button
            android:id="@+id/buttonConfirmAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:onClick="onClickConfirmButton"
            android:text="CREATE ACCOUNT"
            android:textStyle="normal"/>
    </LinearLayout>


</ScrollView>