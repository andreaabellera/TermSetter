<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="backToMenu"
    android:padding="24dp"
    tools:context=".Presentation.OfferedClassesCategories">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TextAppearance.Termsetter.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offered Classes"/>
        
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Termsetter.TextButton.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return to menu"
            android:onClick="backToMenu"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleViewFaculties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_gravity="center" />


    </LinearLayout>
</ScrollView>